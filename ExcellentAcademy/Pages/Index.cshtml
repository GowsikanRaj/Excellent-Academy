<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    var d = new Date();
    const monthNames = ["January", "February", "March", "April", "May", "June",
        "July", "August", "September", "October", "November", "December"
    ];
    var currMonth = d.getMonth();
    var currYear = d.getFullYear();
    var startDate = new Date(currYear, currMonth, 1);

    $(".payment").datepicker();
    $(".payment").datepicker("setDate", startDate);

    $(document).ready(function () {
        $faStudent = 1;
        $('#addStudent').click(function () {
            $('#student').clone().attr('id', 'student' + $faStudent).appendTo('#students')
                .find("*[id]")
                .each(function () {
                    var id = this.id || "";
                    $(this).attr("name", (name.substring(0, 13) + $faStudent + name.substring(14, name.length)));
                    $(this).attr("id", (id.substring(0, 13) + $faStudent + id.substring(14, id.length)));
                }).clone().end();
            $faStudent += 1;
        });
    });
</script>
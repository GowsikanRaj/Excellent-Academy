@page
@model IndexModel
@{
    ViewData["Title"] = "Excellent Academy";
}
<link rel="stylesheet" href="~/css/Form.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<body class="body">
    <div class="container">
        <form method="post">
            <div>
                <div class="row">
                    <img src="Capture.jpg" style="width:200px; height:60px" />
                </div>
                <div class="row mt-2">
                    <div class="col-4"></div>
                    <div class="col-4" style="text-align: center; font-weight: bold; font-size: 20px; font-family: sans-serif; text-decoration: underline">
                        Student Application Form
                    </div>
                    <div class="col-4" style="text-align:right; font-weight: bold; font-size: 20px; font-family: sans-serif; text-decoration: underline">2019/2020</div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-3">
                        <label class="label_div">First Name:</label>
                        <div class="input-group col-12">
                            <input type="text" id="form.firstname" name="form.firstname" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="label_div">Last Name:</label>
                        <div class="input-group col-12">
                            <input type="text" id="form.lastname" name="form.lastname" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="label_div">Address:</label>
                        <div class="input-group col-12">
                            <input type="text" id="form.address" name="form.address" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="label_div">City:</label>
                        <div class="input-group col-12">
                            <input type="text" id="form.city" name="form.city" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-3">
                        <label class="label_div">Telephone Number:</label>
                        <div class="input-group col-12">
                            <input type="tel" id="form.phone" name="form.phone" pattern="[0-9]{10}" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="label_div">Cell-Phone Number:</label>
                        <div class="input-group col-12">
                            <input type="tel" id="form.cell" name="form.cell" pattern="[0-9]{10}" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="label_div">Emergency Telephone Number:</label>
                        <div class="input-group col-12">
                            <input type="tel" id="form.emergency" name="form.emergency" pattern="[0-9]{10}" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="label_div">E-Mail:</label>
                        <div class="input-group col-12">
                            <input type="text" id="form.email" name="form.email" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-3">
                        <label class="label_div">Starting Date:</label>
                        <div class="input-group col-12">
                            <input type="text" id="form.startingdate" name="form.startingdate" value="@DateTime.Now.ToString("MMMM dd, yyyy")" class="form-control" />
                        </div>
                    </div>
                </div>
                <div id="students" class="mt-3">
                    <div class="row">
                        <div class="col text-right">
                            <a href="javascript:void(0);" id="addStudent">Add Another Student</a>
                        </div>
                    </div>
                    <div class="mt-3" id="student" name="student" style="border:1px solid black; padding:10px">
                        <div class="row">
                            <div class="col-12" style="text-align:center">
                                <label class="label_div">Student</label>
                            </div>
                        </div>
                        <div class="row mt-3" style="text-align:center">
                            <div class="col-md-3">
                                <label class="label_div">First Name:</label>
                                <div class="input-group col-12">
                                    <input type="text" id="form.student[0].studentname" name="form.student[0].studentname" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="label_div">Grade:</label>
                                <div class="input-group col-12">
                                    <select id="form.student[0].grade" name="form.student[0].grade" size="14" class="form-control">
                                        <option value="JK">JK</option>
                                        <option value="SK">SK</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                        <option value="9">9</option>
                                        <option value="10">10</option>
                                        <option value="11">11</option>
                                        <option value="12">12</option>

                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="label_div">Subjects</label>
                                <div class="input-group col-12">
                                    English <input type="checkbox" id="form.student[0].subject[0].english" name="form.student[0].subject[0].english" value="English">
                                    French <input type="checkbox" id="form.student[0].subject[0].french" name="form.student[0].subject[0].french" value="French">
                                    Math <input type="checkbox" id="form.student[0].subject[0].math" name="form.student[0].subject[0].math" value="Math">
                                    Science <input type="checkbox" id="form.student[0].subject[0].science" name="form.student[0].subject[0].science" value="Science"> 
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="label_div">Days</label>
                                <div class="input-group col-12">
                                    <table class="table">
                                        <tr>
                                            <td style="border:none; padding:2px">
                                                Sunday <input type="checkbox" id="form.student[0].day[0].sunday" name="form.student[0].days[0].sunday" value="Sunday" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border:none; padding:2px">
                                                Monday <input type="checkbox" id="form.student[0].day[0].monday" name="form.student[0].days[0].monday" value="Monday" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border:none; padding:2px">
                                                Tuesday <input type="checkbox" id="form.student[0].day[0].tuesday" name="form.student[0].days[0].tuesday" value="Tuesday" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border:none; padding:2px">
                                                Wednesday <input type="checkbox" id="form.student[0].day[0].wednesday" name="form.student[0].days[0].wednesday" value="Wednesday" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border:none; padding:2px">
                                                Thursday <input type="checkbox" id="form.student[0].day[0].thursday" name="form.student[0].days[0].thursday" value="Thursday" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border:none; padding:2px">
                                                Friday <input type="checkbox" id="form.student[0].day[0].friday" name="form.student[0].days[0].friday" value="Friday" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="border:none; padding:2px">
                                                Saturday <input type="checkbox" id="form.student[0].day[0].saturday" name="form.student[0].days[0].saturday" value="Saturday" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12" style="font-weight:bold; font-size: 18px; font-family: 'Times New Roman'">
                        Tuition payments are due at the beginning of each month. THERE ARE NO CREDITS FOR STUDENT ABSCENCES.
                        Therefore, there is no reduction in tuition for a missed lesson. Make up lessons may be avaliable at the discretion
                        and avaliability of your teacher. Students wishing to discontinue lessons must notify our office at least one week
                        before the next scheduled lesson. Lessons will be chargeed until notice is recieved. The same policy applies to
                        lessons due to inclement weather.

                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-4">
                        <label class="label_div">Date:</label>
                        <div class="input-group col-12">
                            <input type="text" id="form.date" name="form.date" value="@DateTime.Now.ToString("MMMM dd, yyyy")" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-8">
                        <label class="label_div">Signature:</label>
                        <div class="input-group col-12">
                            <input type="text" id="form.signature" name="form.signature" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="mt-5" style="border: 1px solid black; padding:5px">
                    <div class="row mt-2">
                        <div class="col text-left" style="text-decoration:underline">
                            Office Use Only
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <label class="label_div">Fees:</label>
                            <div class="input-group col-12">
                                <input type="text" id="form.fees" name="form.fees" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <label class="label_div">Payment Day:</label>
                            <div class="input-group col-12">
                                <input type="text" id="form.paymentday" name="form.paymentday" class="payment form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12 text-right" s>
                        <input class="btn btn-success form-control" type="submit" value="Save" asp-page-handler="Submit" style="width: 60px" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
<div class="container">
    <hr style="height:1px;border:none;color:#333;background-color:#333;">
    <div class="row" style="padding-left:10px; font-size: 18px; font-family: 'Times New Roman'; text-align:center">
        1080 Tapscott Road #5 and #10, Scarbrough, ONT, M1X 1E7. Tel: 416-285-7775, Cell: 416-833-4141
    </div>
</div>
